<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.board2.repository.UserMapper">

    <select id="findByUserId" parameterType="String" resultType="com.study.board2.dto.User">
        SELECT *
        FROM user
        WHERE user_id=#{userId}
    </select>

    <insert id="insertUser" parameterType="com.study.board2.dto.User">
        INSERT INTO user (user_id, user_pw, user_name, reg_date, user_email, user_role)
        VALUES (#{userId}, #{userPw}, #{userName}, now(), #{userEmail}, #{userRole})
    </insert>
</mapper>